<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../stylesheets/style.css">
</head>
<body>
    
<div class="main">

    <div class="form">

        <form action="/create" method="post">
            <input type="text" placeholder="Title goes here...." class="title" name="name">
            <textarea  id="" class="textarea" placeholder="Write Your Task Detail Here..." name="details"></textarea>
            <input type="submit" value="Create Task" class="submit">
        </form>

    </div>

    <div class="tasks">

      <% if(file.length > 0){ %>
       <% file.forEach(function(val){ %>  
        <div class="task">
            <h1><%= val %></h1>
            <div style="display: flex; align-items: center; justify-content: space-between;">
                <a href="/file/<%=val%>">Read More...</a>
                <a href="/edit/<%= val %>">Edit..</a>
            </div>
        </div>
       <% }) %>
     <% } else { %>
        <h3>No Task Yet..</h3>
     <% } %>

    </div>
</div>

</body>
</html>